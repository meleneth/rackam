!!!
%html{:lang => "en"}
  %head
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title rackam
    %link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css", :rel => "stylesheet"}/
    %link{:href => "/rackam.css", :rel => "stylesheet"}/
    %script{:src => "http://code.jquery.com/jquery-1.11.0.min.js"}
    %script{:src => "http://code.jquery.com/jquery-migrate-1.2.1.min.js"}
    %script{:src => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %script{:src => "/rackam.js", :type => "text/javascript"}
  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} r[a]ckam
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a#newsgroups-link{:href => "#"} Newsgroups
            %li
              %a#headers-link{:href => "#"} Headers
            %li
              %a#filters-link{:href => "#"} Filters
            %li
              %a#postsets-link{:href => "#"} PostSets
            %li
              %a#postfiles-link{:href => "#"} PostFiles
            %li
              %a#authers-link{:href => "#"} Authors
    %br{:clear => "both"}
    %br{:clear => "both"}
    %br{:clear => "both"}
    #newsgroup-name
    .container
      .row
        .col-xs-2
          %div#sidebar
          #filter-info{:style => "display: none;"}
            .table
              .tr
                .td PostSet.num_files
                .td %f
              .tr
                .td PostSet.fileno
                .td %e
              .tr
                .td PostSet.name
                .td %s
              .tr
                .td PostFile.num_pieces
                .td %n
              .tr
                .td PostFile.piece_no
                .td %p
              .tr
                .td PostFile.filename
                .td %a
              .tr
                .td discard
                .td %d
        .col-xs-10.panel.panel-default
          .panel-body
    #newsgroup-list-screen{:style => "display: none;"}
      %ul#newsgroups-list
      
    #newsgroup-screen{:style => "display: none;"}
      #newsgroup
        %dl
          %dt#newsgroup-screen-headers Headers
          %dd#newsgroup-screen-headers-count
          %dt#newsgroup-screen-postsets PostSets
          %dd#newsgroup-screen-postsets-count
          %dt#newsgroup-screen-postfiles PostFiles
          %dd#newsgroup-screen-postfiles-count
          %dt#newsgroup-screen-authors Authors
          %dd#newsgroup-screen-authors-count

    #author-screen{:style => "display: none;"}
      #author
        %h1{:id => "author-screen-name"}
        %ul#author-items
          
    #pager{:style => "display: none;"}
      #pager-ui
        %button#prev-page-button{:value => "&lt;-", :style => "font-size: 48px;"}
        %button#next-page-button{:value => "-&gt;", :style => "font-size: 48px;"}
      .hooligan
        %table#pager-data.table.table-striped
          %thead
          %tbody
